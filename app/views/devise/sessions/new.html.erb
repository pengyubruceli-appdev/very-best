<div class="row">
  <div class = "col-md-3">
    <!--to center the log in card-->
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Log In</h2>
      </div>

      <div class="form-body" style = "padding: 10px">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal", role: "form" }) do |f| %>
          <div class="form-group row">
            <%= f.label :email, class: "col-sm-3 control-label" %>
            <div class="col-sm-9">
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <%= f.label :password, class: "col-sm-3 control-label" %>
            <div class="col-sm-9">
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class = "row">
            <div class = "col-md-3">
              <!--padding-->
            </div>
            <div class = "col-md-9" align = "left">
              <div class="form-group row">
                <div class="col-sm-offset-2 col-sm-10">
                  <% if devise_mapping.rememberable? -%>
                    <%= f.label :remember_me do %>
                      <%= f.check_box :remember_me %> Remember me
                    <% end %>
                  <% end -%>
                </div>
              </div>
    
              <div class="form-group" align = "center">
                <div class="col-sm-12">
                  <%= f.submit "Log in", class: "btn btn-success btn-block" %>
                </div>
              </div>
    
              <div class="form-group">
                <div class="col-sm-12">
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class = "col-md-3">
    <!--to center the log in card-->
  </div>
</div>
